{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Profil de {{ user.pseudo }} {% endblock %}

{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="flash flash-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

{% block body %}

    <h3 style="text-align: center">  {{ user.pseudo }} </h3>

    <div class="container">
            <div id="participant-nom">Nom : {{ user.nom }}</div>
            <div id="participant-prenom">Prenom :  {{ user.prenom }}</div>
            <div id="email"> Email :  {{ user.email }}</div>
            <div id="telephone"> Telephone :   {{ user.telephone }}</div>
            <div id="campus">Etudie au Campus de :  {{ user.campus.nom }}</div>
    </div>
{% endblock %}